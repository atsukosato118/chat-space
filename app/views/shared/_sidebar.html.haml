.side
  .side__header
    .side__header__name
      = current_user.name
    = link_to edit_user_path(current_user) do
      %i.fa.fa-cog.fa-lg
    = link_to new_group_path do
      %i.fa.fa-pencil-square-o.fa-lg
  .side__main
    -@groups.each do |group|
      .side__main__content
        %p.side__main__content__name
          = group.name
        %p.side__main__content__message The Latest Message1

